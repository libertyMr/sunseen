<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_system_log_fragment_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:gravity="center"
            android:text="序号"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:gravity="center_vertical"
            android:text="日志类型"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:text="处理操作"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/system_log_operate_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="6dp"
        android:background="@color/blue_homepage_item"
        android:orientation="horizontal">
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:gravity="center"
            android:textSize="10sp"
            android:text="01"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:text="系统操作日志"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/system_log_operate_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@drawable/system_log_text_bg_1"
                android:paddingRight="20dp"
                android:textSize="10sp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="导出"/>
            <TextView
                android:id="@+id/system_log_operate_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_homepage_item"
                android:background="@drawable/system_log_text_bg_2"
                android:layout_marginLeft="10dp"
                android:paddingLeft="20dp"
                android:textSize="10sp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:text="查看"/>
            <ImageView
                android:id="@+id/system_log_operate_delete"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/delete"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/system_log_failure_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="10dp"
        android:background="@color/blue_homepage_item"
        android:orientation="horizontal">
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:textSize="10sp"
            android:gravity="center"
            android:text="02"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:gravity="center_vertical"
            android:text="系统报警日志"
            android:textSize="10sp"
            android:textColor="@android:color/white" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/system_log_failure_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@drawable/system_log_text_bg_1"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:text="导出"/>
            <TextView
                android:id="@+id/system_log_failure_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_homepage_item"
                android:background="@drawable/system_log_text_bg_2"
                android:layout_marginLeft="10dp"
                android:paddingLeft="20dp"
                android:textSize="10sp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:text="查看"/>
            <ImageView
                android:id="@+id/system_log_failure_delete"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/delete"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/system_log_work_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="10dp"
        android:background="@color/blue_homepage_item"
        android:orientation="horizontal">
        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:gravity="center"
            android:textSize="10sp"
            android:text="03"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:text="系统工作日志"
            android:textColor="@android:color/white" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/system_log_work_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@drawable/system_log_text_bg_1"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textSize="10sp"
                android:gravity="center_vertical"
                android:text="导出"/>
            <TextView
                android:id="@+id/system_log_work_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_homepage_item"
                android:background="@drawable/system_log_text_bg_2"
                android:layout_marginLeft="10dp"
                android:paddingLeft="20dp"
                android:textSize="10sp"
                android:paddingRight="20dp"
                android:gravity="center_vertical"
                android:text="查看"/>
            <ImageView
                android:id="@+id/system_log_work_delete"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/delete"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>