<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:id="@+id/dialog_layout"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_self_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@color/title_bg"
        android:text="是否删除当前用户？" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/blue_homepage_item">
        <LinearLayout
            android:id="@+id/ll_self_dialog_user_administration"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="invisible"
            android:background="@android:color/transparent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_self_dialog_user_id"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="9sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_self_dialog_user_name"
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_self_dialog_user_spinner_power"
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_self_dialog_user_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="end"
                android:paddingRight="2dp"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ll_self_dialog_failure_warning"
            android:gravity="center"
            android:visibility="invisible"
            android:background="@android:color/transparent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_self_dialog_failure_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.12"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:gravity="center"
                android:text="1" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_weight="0.28">
                <TextView
                    android:id="@+id/tv_self_dialog_failure_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空气源热泵"
                    android:textSize="10sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_self_dialog_failure_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BY021245125452024854"
                    android:textColor="@android:color/white"
                    android:textSize="8sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_self_dialog_failure_describe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_weight="0.30"
                android:textSize="10sp"
                android:text="1213213241545654" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:layout_weight="0.20">
                <TextView
                    android:id="@+id/tv_self_dialog_failure_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已处理"
                    android:textSize="10sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv_self_dialog_failure_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:text="2018/7/23/23:25:12"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="6"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_yes"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/tv_sp_running_bg"
            android:textSize="12sp"
            android:text="是" />

        <Button
            android:id="@+id/bt_no"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:background="@drawable/tv_sp_running_bg"
            android:text="否" />
    </LinearLayout>

</LinearLayout>