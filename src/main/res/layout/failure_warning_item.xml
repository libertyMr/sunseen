<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_homepage_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">

    <TextView
        android:id="@+id/tv_failure_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_failure_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气源热泵"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_failure_device_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BY021245125452024854"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_failure_describe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:text="温度超过60°C，水泵异常工作"
        android:textSize="12sp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/ll_failure_handled"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:visibility="invisible"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:paddingRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_failure_handled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tv_failure_warning_y_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="已处理"
                android:textColor="@android:color/white"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_failure_untreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/tv_failure_warning_w_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="未处理"
                android:textColor="@color/blue_homepage_item"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/tv_failure_delete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_failure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/7/13/14:57:12"
            android:layout_gravity="end"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_failure_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:visibility="invisible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_failure_result"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginRight="50dp"
                android:paddingLeft="15dp"
                android:gravity="bottom"
                android:paddingRight="15dp"
                android:paddingTop="3dp"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/iv_failure_result_delete"
                android:layout_width="13dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/delete" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_failure_result_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018/7/13/14:57:12"
            android:layout_gravity="end"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>